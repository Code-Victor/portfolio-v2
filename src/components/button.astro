---
import type { HTMLTag, Polymorphic } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";
import { cn } from "@/lib/utils";

export const buttonVariants = cva(
  "inline-flex gap-2 items-center justify-center font-medium ring-offset-background transition duration-200 active:scale-95 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:bg-gray-3 disabled:text-white",
  {
    variants: {
      variant: {
        default: "bg-foreground text-background hover:bg-foreground/90",
        ghost: "hover:bg-accent hover:text-accent-foreground text-primary",
        "ghost-light": "hover:bg-white/20 text-white",
        unstyled: "",
      },
      size: {
        sm: "h-9 px-4 text-xs [--icon-size:16px]",
        md: "px-[1.125rem] h-10 md:h-11 text-sm [--icon-size:18px]",
        lg: "py-3 px-6 text-base [--icon-size:24px]",
      },
      icon: {
        true: "p-[0!important]",
      },
      rounded: {
        sm: "rounded-sm",
        md: "rounded-md",
        lg: "rounded-lg",
        full: "rounded-full",
        none: "rounded-none",
      },
      fullWidth: {
        true: "w-full",
      },
    },
    compoundVariants: [
      {
        icon: true,
        size: "md",
        className: "h-9 w-9 md:h-9 md:w-9",
      },
      {
        icon: true,
        size: "sm",
        className: "h-7 w-7",
      },
      {
        icon: true,
        size: "lg",
        className: "h-12 w-12",
      },
    ],
    defaultVariants: {
      variant: "default",
      size: "md",
      rounded: "full",
    },
  }
);

type Props<Tag extends HTMLTag = "button"> = Polymorphic<{
  as: Tag;
}> &
  VariantProps<typeof buttonVariants>;

const {
  as: Tag = "button",
  variant = "default",
  size = "md",
  fullWidth,
  rounded,
  icon,
  class: classProp,
  ...rest
} = Astro.props;
const className = cn(
  buttonVariants({
    variant,
    size,
    fullWidth,
    rounded,
    icon,
    class: classProp,
  })
);
---

<Tag class={className} {...rest}>
  <slot name="icon-before" />
  <slot />
  <slot name="icon-after" />
</Tag>

<style is:inline>
  svg {
    height: var(--icon-size);
    width: var(--icon-size);
  }
</style>
